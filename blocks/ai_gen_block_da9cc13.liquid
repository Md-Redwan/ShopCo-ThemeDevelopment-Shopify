
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-category-cards-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-category-cards__container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.card_gap }}px;
    width: 100%;
  }

  .ai-category-card-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
  }

  .ai-category-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .ai-category-card__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    overflow: hidden;
  }

  .ai-category-card__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-category-card-{{ ai_gen_id }}:hover .ai-category-card__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-category-card__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-category-card__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-category-card__content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    display: flex;
    flex-direction: column;
    gap: 12px;
    flex-grow: 1;
  }

  .ai-category-card__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 700;
    color: {{ block.settings.title_color }};
    margin: 0;
    line-height: 1.2;
  }

  .ai-category-card__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.5;
    margin: 0;
    flex-grow: 1;
  }

  .ai-category-card__product-count-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_count_size }}px;
    color: {{ block.settings.product_count_color }};
    margin: 8px 0;
  }

  .ai-category-card__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    text-decoration: none;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    cursor: pointer;
    width: 100%;
  }

  .ai-category-card__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-category-card__empty-state-{{ ai_gen_id }} {
    padding: 20px;
    text-align: center;
    color: #999;
    font-size: 14px;
    font-style: italic;
  }

  @media screen and (max-width: 989px) {
    .ai-category-cards__container-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-category-cards__container-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-category-card__content-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.8 }}px;
    }

    .ai-category-card__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .ai-category-card__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-category-cards-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-category-cards__container-{{ ai_gen_id }}">
    {% for i in (1..3) %}
      {% liquid
        assign collection_key = 'category_' | append: i | append: '_collection'
        assign title_key = 'category_' | append: i | append: '_title'
        assign description_key = 'category_' | append: i | append: '_description'
        assign image_key = 'category_' | append: i | append: '_image'
        assign button_text_key = 'category_' | append: i | append: '_button_text'

        assign collection = block.settings[collection_key]
        assign title = block.settings[title_key]
        assign description = block.settings[description_key]
        assign image = block.settings[image_key]
        assign button_text = block.settings[button_text_key]
      %}

      <div class="ai-category-card-{{ ai_gen_id }}">
        <div class="ai-category-card__image-wrapper-{{ ai_gen_id }}">
          {% if image %}
            <img
              src="{{ image | image_url: width: 800 }}"
              alt="{{ image.alt | escape }}"
              loading="lazy"
              width="{{ image.width }}"
              height="{{ image.height }}"
              class="ai-category-card__image-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-category-card__image-placeholder-{{ ai_gen_id }}">
              {{ 'collection-1' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>

        <div class="ai-category-card__content-{{ ai_gen_id }}">
          {% if title != blank %}
            <h3 class="ai-category-card__title-{{ ai_gen_id }}">{{ title }}</h3>
          {% endif %}

          {% if description != blank %}
            <p class="ai-category-card__description-{{ ai_gen_id }}">{{ description }}</p>
          {% endif %}

          {% if collection %}
            {% assign product_count = collection.products_count %}
            {% if product_count >= 4 %}
              <div class="ai-category-card__product-count-{{ ai_gen_id }}">
                {{ product_count }} products
              </div>
            {% else %}
              <div class="ai-category-card__product-count-{{ ai_gen_id }}">
                Only {{ product_count }} product{% if product_count != 1 %}s{% endif %} available
              </div>
            {% endif %}

            <a
              href="{{ collection.url }}"
              class="ai-category-card__button-{{ ai_gen_id }}"
            >
              {{ button_text }}
            </a>
          {% else %}
            <div class="ai-category-card__empty-state-{{ ai_gen_id }}">
              Select a collection for this category
            </div>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>

