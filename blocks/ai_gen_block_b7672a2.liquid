{% doc %}
  @prompt
    Create a Trust Section. This Trust Section must have.
    • Guarantee text
    • Security message
    • Brand values
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-trust-section-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-trust-section__container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.item_spacing }}px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-trust-section__item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: {{ block.settings.text_alignment }};
    text-align: {{ block.settings.text_alignment }};
    gap: {{ block.settings.content_spacing }}px;
    padding: {{ block.settings.item_padding }}px;
    background-color: {{ block.settings.item_background_color }};
    border-radius: {{ block.settings.item_border_radius }}px;
    border: {{ block.settings.item_border_width }}px solid {{ block.settings.item_border_color }};
  }

  .ai-trust-section__icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    color: {{ block.settings.icon_color }};
    flex-shrink: 0;
  }

  .ai-trust-section__icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
  }

  .ai-trust-section__title-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    color: {{ block.settings.title_color }};
  }

  .ai-trust-section__text-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .ai-trust-section__container-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-trust-section__icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
    }

    .ai-trust-section__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .ai-trust-section__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-trust-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-trust-section__container-{{ ai_gen_id }}">
    {% if block.settings.show_guarantee %}
      <div class="ai-trust-section__item-{{ ai_gen_id }}">
        <div class="ai-trust-section__icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
            <path d="M9 12l2 2 4-4"></path>
          </svg>
        </div>
        <h3 class="ai-trust-section__title-{{ ai_gen_id }}">{{ block.settings.guarantee_title }}</h3>
        <p class="ai-trust-section__text-{{ ai_gen_id }}">{{ block.settings.guarantee_text }}</p>
      </div>
    {% endif %}

    {% if block.settings.show_security %}
      <div class="ai-trust-section__item-{{ ai_gen_id }}">
        <div class="ai-trust-section__icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
          </svg>
        </div>
        <h3 class="ai-trust-section__title-{{ ai_gen_id }}">{{ block.settings.security_title }}</h3>
        <p class="ai-trust-section__text-{{ ai_gen_id }}">{{ block.settings.security_text }}</p>
      </div>
    {% endif %}

    {% if block.settings.show_values %}
      <div class="ai-trust-section__item-{{ ai_gen_id }}">
        <div class="ai-trust-section__icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
          </svg>
        </div>
        <h3 class="ai-trust-section__title-{{ ai_gen_id }}">{{ block.settings.values_title }}</h3>
        <p class="ai-trust-section__text-{{ ai_gen_id }}">{{ block.settings.values_text }}</p>
      </div>
    {% endif %}
  </div>
</div>

